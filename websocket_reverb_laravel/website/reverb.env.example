# ============================================
# LARAVEL REVERB CONFIGURATION
# ============================================
# Copy these settings to your .env file
# Generate secure keys using the commands below
# ============================================

# Broadcasting Driver
BROADCAST_DRIVER=reverb
QUEUE_CONNECTION=sync

# Laravel Reverb Application Settings
# Generate with: php -r "echo bin2hex(random_bytes(8)) . PHP_EOL;"
REVERB_APP_ID=my-app-id

# Generate with: php -r "echo bin2hex(random_bytes(16)) . PHP_EOL;"
REVERB_APP_KEY=my-app-key

# Generate with: php -r "echo bin2hex(random_bytes(32)) . PHP_EOL;"
REVERB_APP_SECRET=my-app-secret

# Reverb Connection Settings
# For local development use localhost
# For production use your domain name
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Reverb Server Settings
# 0.0.0.0 allows connections from any IP
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080

# Vite Frontend Configuration
# These are automatically populated from above
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# ============================================
# PRODUCTION SETTINGS (HTTPS/WSS)
# ============================================
# Uncomment and use these for production:
# REVERB_HOST=your-domain.com
# REVERB_PORT=443
# REVERB_SCHEME=https
# REVERB_SERVER_PORT=8080

# ============================================
# SCALING SETTINGS (OPTIONAL)
# ============================================
# Enable Redis-based scaling for multiple Reverb instances
# REVERB_SCALING_ENABLED=true
# REVERB_SCALING_CHANNEL=reverb
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=null

# ============================================
# COMMANDS TO GET STARTED
# ============================================
# 1. Generate secure keys:
#    php -r "echo 'REVERB_APP_ID=' . bin2hex(random_bytes(8)) . PHP_EOL;"
#    php -r "echo 'REVERB_APP_KEY=' . bin2hex(random_bytes(16)) . PHP_EOL;"
#    php -r "echo 'REVERB_APP_SECRET=' . bin2hex(random_bytes(32)) . PHP_EOL;"
#
# 2. Start Reverb server:
#    php artisan reverb:start
#
# 3. Start development server:
#    php artisan serve
#
# 4. For mobile testing, find your local IP:
#    Windows: ipconfig
#    Mac/Linux: ifconfig
#    Then update REVERB_HOST to your IP (e.g., 192.168.1.100)
#
# ============================================

